{
  "Logging": {
    "LogLevel": {
      "Default": "Information",
      "Microsoft.Hosting.Lifetime": "Information"
    }
  },
  "NLog": {
    "variables": {
      "logDir": "${baseDir}/../Log"
    },
    "throwConfigExceptions": true,
    "targets": {
      "async": true,
      "logfile": {
        "type": "File",
        "fileName": "${logDir}/service.log"
      },
      "logconsole": {
        "type": "Console"
      }
    },
    "rules": [
      {
        "logger": "*",
        "minLevel": "Info",
        "writeTo": "logconsole"
      },
      {
        "logger": "*",
        "minLevel": "Info",
        "writeTo": "logfile"
      }
    ]
  },
  "IntervalMinutes": "240",
  "SteamBackup": {
    "SteamGames": [
      {
        "Process": "LOTF2-Win64-Shipping",
        "SourceDirectory": "C:\\Users\\dkorzeniewski\\AppData\\Local\\LOTF2\\Saved\\SaveGames"
      }
    ],
    "TargetDirectory": "C:\\Users\\dkorzeniewski\\Saved Games\\LOTF2"
  }
}
